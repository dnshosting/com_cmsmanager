<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="cmsmanager" label="JOPTIONS">
        <field name="secret_key"
               type="text"
               default=""
               label="COM_CMSMANAGER_SECRET_KEY"
               class="inputbox input-block-level"
                />

        <field name="maintenance"
               type="radio"
               default="0"
               label="COM_CMSMANAGER_CONFIG_MAINTENANCE"
               description="COM_CMSMANAGER_CONFIG_MAINTENANCE_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>

    <fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
        <field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" filter="rules" component="com_cmsmanager"
               section="component">
            <action name="core.manage" title="JACTION_MANAGE" description="JACTION_MANAGE_COMPONENT_DESC"/>
        </field>
    </fieldset>
</config>